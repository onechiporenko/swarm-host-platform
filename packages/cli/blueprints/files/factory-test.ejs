import { Lair } from '@swarm-host/server';
import { expect } from 'chai';
import <%= className %>Factory from '<%= importPath %>';

let lair;
describe('#<%= className %>Factory', () => {
  beforeEach(() => {
    Lair.cleanLair();
    lair = Lair.getLair();
    lair.registerFactory(<%= className %>Factory);
  });

  afterEach(() => {
    Lair.cleanLair();
  });

  describe('should create a record', () => {
    let record;
    beforeEach(() => {
      record = lair.createRecords('<%= name %>', 1).pop();
    });

    it('with defined attr `id`', () => {
      expect(record).to.have.property('id');
    });
  });
});
