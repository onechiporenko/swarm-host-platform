{
  "name": "swarm-host",
  "version": "1.1.0",
  "description": "fake-server",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build-publish": "npm run build && rm -rf dist/tests && rm -rf dist/lib/*.js.map && cp dist/lib/* dist/. && rm -rf dist/lib",
    "test": "mocha -r ts-node/register tests/**/*.ts",
    "lint": "tslint -c tslint.json lib/**/*.ts && tslint -c tests/tslint.json tests/**/*.ts",
    "test:remap": "remap-istanbul -i dist/coverage/coverage.json -o ./dist/coverage/coverage -t lcovonly",
    "test:cov": "istanbul cover -x \"dist/lib/express.js\" --dir ./dist/coverage ./node_modules/mocha/bin/_mocha -- dist/tests/**/*.js --report lcovonly -R spec --bail -- && npm run test:remap && cat ./dist/coverage/coverage | coveralls && rm -rf ./coverage",
    "test:mut": "stryker run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onechiporenko/swarm.git"
  },
  "keywords": [
    "faker",
    "server"
  ],
  "author": "onechiporenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onechiporenko/swarm/issues"
  },
  "homepage": "https://github.com/onechiporenko/swarm#readme",
  "dependencies": {
    "@types/express": "^4.11.1",
    "@types/node-cron": "^1.2.0",
    "body-parser": "^1.18.2",
    "colors": "^1.2.1",
    "express": "^4.16.3",
    "fs-readdir-recursive": "^1.1.0",
    "lair-db": "^1.6.0",
    "methods": "^1.1.2",
    "node-cron": "^1.2.1",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-http": "^3.0.4",
    "@types/faker": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/sinon": "^4.3.0",
    "@types/winston": "^2.3.8",
    "@types/yargs": "^10.0.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^2.13.1",
    "istanbul": "^0.4.5",
    "jest-cli": "^22.4.3",
    "mocha": "^4.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "remap-istanbul": "^0.9.6",
    "sinon": "^4.4.8",
    "stryker": "^0.18.2",
    "stryker-api": "^0.12.0",
    "stryker-html-reporter": "^0.11.5",
    "stryker-jest-runner": "^0.3.0",
    "stryker-mocha-framework": "^0.8.4",
    "stryker-mocha-runner": "^0.10.6",
    "stryker-typescript": "^0.8.3",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
